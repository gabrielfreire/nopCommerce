@using Nop.Core
@using Nop.Services.Helpers
@using Nop.Web.Framework.UI
@inject IWorkContext workContext
@inject IThemeContext themeContext
@inject IUserAgentHelper userAgentHelper
@{
    var supportRtl = (await workContext.GetWorkingLanguageAsync()).Rtl;
    var themeName = await themeContext.GetWorkingThemeNameAsync();

    //add browser specific CSS files

    //add main CSS file
    if (supportRtl)
    {
        NopHtml.AppendCssFileParts($"~/Themes/{themeName}/Content/css/wristwear.styles.responsive.rtl.css");
        NopHtml.AppendCssFileParts($"~/Themes/{themeName}/Content/css/wristwear.styles.rtl.css");
        NopHtml.AppendCssFileParts($"~/Themes/{themeName}/Content/css/bootstrap.min.rtl.css");
    }
    else
    {
        NopHtml.AppendCssFileParts($"~/Themes/{themeName}/Content/css/wristwear.styles.responsive.css");
        NopHtml.AppendCssFileParts($"~/Themes/{themeName}/Content/css/wristwear.styles.css");
        NopHtml.AppendCssFileParts($"~/Themes/{themeName}/Content/css/bootstrap.min.css");
    }

    NopHtml.AppendCssFileParts($"~/Themes/{themeName}/Content/css/font-awesome.min.css");
    NopHtml.AppendCssFileParts($"~/Themes/{themeName}/Content/css/owl.carousel.min.css");

    //add jQuery UI css file
    NopHtml.AppendCssFileParts("~/lib_npm/jquery-ui-dist/jquery-ui.min.css");

}